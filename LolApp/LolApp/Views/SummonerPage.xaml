<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LolApp.Views.SummonerPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">

            <Label Text="League of Legends summoner level finder" FontSize="Medium"/>

            <Entry Text="{Binding SummonerName}" Placeholder="Type a summoner name here..."/>

            <Button Text="Find Summoner Level" Command="{Binding GetSummonerCommand}"/>

            <Label HorizontalOptions="Center" Text="The level of the searched summoner is:" Padding="15,10,15,15" FontSize="Large" HorizontalTextAlignment="Center"/>
            <Label HorizontalOptions="Center" Text="{Binding Summoner.SummonerLevel}" FontSize="Large" TextColor="Black"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>